{% extends 'layout.twig' %}
{% block title %}Error {{ code }}  {{ data.title }} | {{ trans("Site title") }}{% endblock %}

{% block container %}
    <div class="page-content p-5 min-vh-100">
        <div class="row justify-content-center">
            <div class="error-box">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="text-center w-50 mx-auto my-4">
                            <img src="{{ __PUBLIC__('images/' ~ code ~ '-error.svg') }}" title="invite.svg" alt="{{ data.title }}">
                        </div>
                        <h3 class="text-center mb-4 mt-3">{{ data.title }}</h3>
                        <p class="text-muted text-center mt-3">{{ trans(data.content) }}</p>
                        <div class="mt-4 text-center">
                            <a href="{{ url('index') }}" class="btn btn-primary w-100">{{ trans("Back to previous page") }}</a>
                        </div>
                        <div class="mt-3 text-center">
                            <a href="javascript:void(0);" class="card-link fw-medium">{{ trans("Back to Home") }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script type="text/javascript">
        Do('nprogress', () => {
            NProgress.start();
            NProgress.done();

            const referrer = document.referrer;

            if (referrer) {
                console.log(referrer)
            } else {
                console.log('直接访问或无来源页面');
            }
        });
    </script>
{% endblock %}