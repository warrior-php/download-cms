{% extends 'layout.twig' %}
{% block title %}{{ trans("Sign in to Hoym") }} Â· {{ trans("Site title") }}{% endblock %}
{% block bsTheme %}light{% endblock %}

{% block container %}
    <div class="page-content p-5 min-vh-100">
        <div class="row justify-content-center">
            <div class="error-box">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="text-center w-50 mx-auto my-4">
                            <img src="{{ __PUBLIC__('images/404-error.svg') }}" title="invite.svg" alt="Page Not Found">
                        </div>
                        <h3 class="text-center mb-4 mt-3">{{ trans("Page Not Found") }}</h3>
                        <p class="text-muted text-center mt-3">{{ trans("It's looking like you may have taken a wrong turn. Don't worry... it happens to the best of us. You might want to check your internet connection. ") }}</p>
                        <div class="mt-4 text-center">
                            <a href="{{ url('index') }}" class="btn btn-primary w-100">{{ trans("Back to Home") }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}